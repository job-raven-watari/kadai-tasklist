<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, "ステータス" %>
  <%= f.select :status, [["not Ready", "not Ready"], ["Ready", "Ready"], ["Doing", "Doing"], ["Done", "Done"]] %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.submit "登録" %>
<% end %>