<% if logged_in? %>
  <p>ログインユーザ： <%= current_user.name %></p>
  <%= render "tasks/tasks", tasks: @tasks %>
<% else %>
  <div class="jambotron">
    <div class="text-center">
      <h1>Welcome to the Tasklists!!</h1>
      <%= link_to "sign up now!!", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
